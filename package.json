{
	"name": "ai-usage-monitor",
	"version": "0.3.1",
	"description": "Monitor AI provider usage limits from opencode config",
	"main": "dist/index.js",
	"bin": "dist/index.js",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"postinstall": "bun run build",
		"start": "./scripts/start.sh --",
		"dev": "tsx src/index.ts",
		"typecheck": "tsc --noEmit",
		"lint": "biome lint .",
		"format": "biome format . --write",
		"check": "biome check ."
	},
	"dependencies": {
		"chalk": "^5.6.2",
		"cli-table3": "^0.6.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@types/node": "^25.2.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	}
}
